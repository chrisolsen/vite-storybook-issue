{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@abgov/react-components": ["packages/react-components/src/index.ts"],
      "@abgov/web-components": ["dist/packages/web-components/web-components.umd.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
